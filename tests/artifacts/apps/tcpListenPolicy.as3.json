{
    "class": "AS3",
    "action": "deploy",
    "persist": true,
    "declaration": {
        "class": "ADC",
        "schemaVersion": "3.50.0",
        "label": "TCP Listen Policy Multi-Port Application",
        "remark": "NetScaler wildcard VS with listen policy converted to AS3",
        "MultiPortApp": {
